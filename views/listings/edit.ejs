<% layout("/layouts/boilerplate.ejs") %>

<body>
<div class="row mt-2">
    <div class="col-8 offset-2">
    <h3>Edit</h3>
    <form method="POST" action="/listings/<%= indList._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="title" class="form-label">Title: </label>
        <input type="text" value="<%= indList.title %>" name="title" class="form-control" required>

    </div>

    <div class="mb-3">
        <label for="description" class="form-label">Description: </label>
        <textarea type="text" name="description" class="form-control" required ><%= indList.description %></textarea>
    </div>
    <div class="mb-3">
        <label for="image" class="form-label">Upload New Image</label>
        <input type="file" name="image" class="form-control" >
    </div>
    <div class="row">
    <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price: </label>
        <input type="number" value="<%= indList.price %>" name="price" class="form-control" required>
            <!-- <div class="valid-feedback">Interesting!</div> -->

    </div>
     <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Country: </label> 
        <input type="text" value="<%= indList.country %>" name="country" class="form-control" required>
    </div>
    </div>

    <div class="mb-3">
        <label for="location" class="form-label">Location: </label>
        <input type="text" value="<%= indList.location %>" name="location" class="form-control" required>
    </div>
   
    <button class="btn btn-dark edit-btn  mt-4 mb-3">Edit</button>
 </form>
</div>
</div>
</body>
